{
  "name": "backend-rating",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "author": {
    "email": "nils@nilshartmann.net",
    "name": "Nils Hartmann",
    "url": "https://nilshartmann.net"
  },
  "description": "Apollo Example - BeerRating Backend",
  "keywords": [
    "apollo graphql",
    "graphql",
    "typescript"
  ],
  "scripts": {
    "build": "tsc",
    "compile:watch": "tsc --watch",
    "start": "nodemon",
    "clean": "rimraf dist/",
    "prettier": "prettier --write \"{src}/**/*.{js,jsx,ts,tsx}\"",
    "gql:schema": "apollo-codegen introspect-schema http://localhost:3000/graphql --output chatapp-schema.json",
    "gql:codegen": "apollo-codegen generate src/**/*.graphql --schema chatapp-schema.json --target typescript --output operation-result-types.ts"
  },
  "devDependencies": {
    "nodemon": "^1.17.2",
    "prettier": "^1.11.0",
    "rimraf": "^2.6.2",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.12.5",
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.0",
    "tslint": "^5.7.0"
  }
}
